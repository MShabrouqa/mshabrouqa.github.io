<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GitHub Pages Token Example</title>
</head>
<body>
    <h1>Token Extraction Example</h1>
    <p id="tokenDisplay">Your token will be displayed here.</p>

    <script>
        // Function to get the value of the query parameter 'token'
        function getTokenFromURL() {
            const urlParams = new URLSearchParams(window.location.search);
            const token = urlParams.get('token');
            return token;
        }

        // Get the token from the URL
        const token = getTokenFromURL();

        // Display the token in the page if it exists
        if (token) {
            document.getElementById("tokenDisplay").textContent = `Token: ${token}`;
        } else {
            document.getElementById("tokenDisplay").textContent = 'No token found in the URL.';
        }
    </script>
</body>
</html>
