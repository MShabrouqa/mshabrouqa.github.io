<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GitHub Pages Token Example</title>
</head>
<body>
    <h1>Token Extraction Example</h1>
    <p id="tokenDisplay">Your token will be displayed here.</p>

    <script>
        // Function to get the value of the query parameter 'token'
        function getTokenFromURL() {
            const urlParams = new URLSearchParams(window.location.search);
            const token = urlParams.get('token');
            return token;
        }

        // Get the token from the URL
        const token = getTokenFromURL();

        // If a token exists, display it, then redirect to the main website
        if (token) {
            document.getElementById("tokenDisplay").textContent = `Token: ${token}`;
            
            // Redirect to the main website after a small delay (optional)
            setTimeout(() => {
                window.location.href = "https://www.mshabrouqa.github.io"; // Redirect to the main website
            }, 2000); // Redirect after 2 seconds (you can adjust this)
        } else {
            document.getElementById("tokenDisplay").textContent = 'No token found in the URL.';
        }
    </script>
</body>
</html>
